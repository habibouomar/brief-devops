<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titlePage %></title>
    <%- include('../partials/head.ejs'); %>   
</head>

<body>
    <header>
        <%- include('../partials/header.ejs'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
              <div class="jumbotron">
                <h1>Welcome To BioCare</h1>
                <p>The company BioCare offer a selection of organic and eco-friendly products</p>
                <div class="d-flex flex-wrap">
                <% products.forEach(function(product) { %>
                  <div class="card" style="width: 20rem;">
                    <div class="card-body">
                      <h3 class="card-title"><%= product.productName %></h3>
                      <h4 class="card-subtitle mb-2 text-muted"><%= product.categoryID.categoryName%></h4>
                      <h5 class="card-subtitle mb-2 text-muted">by BioCare &copy;</h5>                    
                      <p class="card-text"> <%= product.productDesc %></p>
                      <p class="card-text"> <%= product.productPrice %> â‚¬</p>                   
                      <a class="card-link" href="/delete-product/<%= product._id %>">Delete</a>
                    </div>
                  </div>
                <% }); %>
                </div>
              </div>
            </div>
          
            <div class="col-sm-4">
              <div class="well">
                <h2>Product Management</h2>

                <div class="col-sm-8">
                  <form method="post" action="/">

                    <div class="form-group">
                      <label for="inputName">Product Name</label>
                      <input type="text" class="form-control" name="productName" placeholder="Astral">
                      <small id="nameHelp" class="form-text text-muted">required</small>
                    </div>

                    <div class="form-group">
                      <label for="FormControlSelect">Select Category</label>
                      <select class="form-control" name="categoryID">
                        <% categories.forEach(function(category) { %>
                          <option value="<%= category._id %>">
                            <%= category.categoryName %>
                          </option>
                        <% }); %>
                      </select>
                      <small id="selectHelp" class="form-text text-muted">required</small>
                    </div>

                    <div class="form-group">
                      <label for="InputDescription">Price</label>
                      <input type="number" class="form-control" name="productPrice" placeholder="100">
                      <small id="priceHelp" class="form-text text-muted">required</small>
                    </div>

                    <div class="form-group">
                      <label for="formControlDescription">Description</label>
                      <textarea class="form-control" name="productDesc" rows="2"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>

                  </form>
                </div>

              </div>
            </div>
          </div>
    </main>
 
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>